
<div class="comments-container">						
						<ul id="comments-list" class="comments-list">
						<li>
						<div class="comment-main-level">
														<!-- Avatar -->
														<div class="comment-avatar"><img src="<%= comment.user.user_img.url(:user_index) %>" alt=""></div>
														<!-- Contenedor del Comentario -->
														<div class="comment-box">
															<div class="comment-head">
																<h6 class="comment-name by-author"><a href="<%= user_path(comment.user)%>"><%= comment.user.name %></a></h6>
																<span>
																	<% if comment.created_at > Time.now.beginning_of_day %>
																		Vào <%="#{time_ago_in_words(comment.created_at)} ago"%>
																	<% else %>
																	    Vào <%= l(comment.created_at,format: '%B, %d %Y %H:%M:%S')  %>
																	 <% end %>
																</span>
																<i class="fa fa-reply"></i>
																<i class="fa fa-heart"></i>
															</div>
															<div class="comment-content comment">
																<%= comment.comment %>
															</br>
															<% if  logged_in? %>
															<% if @current_user.id == comment.user_id %>
															<%= link_to "Delete", book_comment_path(comment.book, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>
															<% end %>
															<% end %>
															<% from_reply_form ||= nil %>
                                                            <% unless from_reply_form %> 
															<%= link_to 'reply', new_book_comment_path(comment.book,comment.id) %>
                                                            <% end %>
                                                        </div>
														</div>
													</div>
						</li>
					    </ul>
</div>